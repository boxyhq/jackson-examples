  <%- include('partials/header.ejs') %>
    <div class="mx-auto mt-10 max-w-7xl">
      <div class="space-y-3 border border-gray-200 px-3 py-3">
        <h1 class="text-2xl">Enterprise SSO + Hasura GraphQL Example</h1>
